<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"/>
        <EditText
            android:id="@+id/et_kw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="关键字"/>
        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#33EEEEEE">

        <ImageView
            android:id="@+id/iv_touch_line"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="#339933FA"/>
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:max="1000"
            android:progress="50" />
        <TextView
            android:id="@+id/tv_cur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seek_bar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:textSize="10sp"
            android:text="00:00"/>
        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seek_bar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textSize="10sp"
            android:text="00:00"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cur_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="标题"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_play"
            android:src="@mipmap/icon_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/iv_stop"
            android:src="@mipmap/icon_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_play"
            android:layout_alignTop="@id/iv_play"
            android:layout_marginEnd="16dp"/>
        <ImageView
            android:id="@+id/iv_last"
            android:src="@mipmap/icon_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_stop"
            android:layout_alignTop="@id/iv_play"
            android:layout_marginEnd="16dp"/>
        <ImageView
            android:id="@+id/vol_low"
            android:src="@mipmap/vol_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_last"
            android:layout_alignTop="@id/iv_play"
            android:layout_marginEnd="16dp"/>
        <ImageView
            android:id="@+id/iv_mute"
            android:src="@mipmap/vol_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_play"
            android:layout_alignTop="@id/iv_play"
            android:layout_marginStart="16dp"/>
        <ImageView
            android:id="@+id/iv_next"
            android:src="@mipmap/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_mute"
            android:layout_alignTop="@id/iv_play"
            android:layout_marginStart="16dp"/>
        <ImageView
            android:id="@+id/vol_high"
            android:src="@mipmap/vol_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_next"
            android:layout_alignTop="@id/iv_play"
            android:layout_marginStart="16dp"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/title_layout">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>